@model Axado.Carriers.Application.ViewModels.UserViewModel

    <form action="/USer/AddOrUpdate" method="post" role="form" style="padding:30px">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DateCreated" />
        <input type="hidden" asp-for="DateUpdate" />
        <div class="panel panel-default">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">@ViewData.ModelState[""].Errors[0].ErrorMessage</div>
            }
            <div class="panel-heading">Usuario</div>
            <div class="panel-body">
                <div class="form-group" style="margin:auto">
                    <div class="form-group">
                        <label asp-for="Name">Nome</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Nome" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Senha</label>
                        <input type="text" asp-for="Password" class="form-control" placeholder="Senha" />
                    </div>

                    <div class="form-group">
                        <label asp-for="PasswordConfirmation"> Confirmação de Senha</label>
                        <input type="text" asp-for="PasswordConfirmation" class="form-control" placeholder="Confirmação de Senha" />
                    </div>

                    <div class="checkbox">
                        <label asp-for="Active"><input type="checkbox" asp-for="Active" />Ativo</label>
                    </div>
                </div>
        </div>
            
        </div>
            <div class="panel panel-default">
                <div class="panel-heading">Ações</div>
                <div class="panel-body">
                    <div class="form-group" style="margin-top:10px">
                        <div class="col-lg-3 ">
                            <input type="submit" value="Salvar" class="btn btn-default" />
                            <a asp-controller="User" asp-action="Index" class="btn btn-danger pull-right">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>

    </form>
